{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',

  extends: ['github>marcusrbrown/renovate-config#v2'],

  packageRules: [
    {
      matchManagers: ['pip_requirements'],
      addLabels: ['python'],
    },
    {
      matchManagers: ['pip_requirements'],
      matchDepTypes: ['dev'],
      rangeStrategy: 'pin',
    },
    {
      matchManagers: ['pip_requirements'],
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackageNames: ['esphome'],
      commitMessageExtra: 'to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}',
      pinDigests: false,
      separateMajorMinor: false,
      separateMinorPatch: false,
    },
  ],

  postUpgradeTasks: {
    commands: ['npx prettier@3.3.3 --no-color --write .'],
    executionMode: 'branch',
  },
}
